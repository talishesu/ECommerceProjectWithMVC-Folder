@model Category
@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Categories</h4>
                  <p class="card-description">
                      Edit @Model.Name Category
                  </p>
                  <form class="forms-sample" method="post">
                    <div class="form-group">
                      <label  class="required" asp-for="Name" placeholder="Name"></label>
                      <input type="text" class="form-control"  asp-for="Name" placeholder="Name">
                      <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="ParentId"  placeholder="Parent">Parent</label>
                      <select style="width:100%" class="form-control select2"  asp-for="ParentId" asp-items="@ViewBag.Categories">
                          <option selected value=""> - Don't Parent This Category - </option>
                      </select>
                      <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label  class="required" asp-for="Description" placeholder="Description">Description</label>
                      <textarea  class="form-control form-control-lg"  asp-for="Description" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        @if(ViewBag.Message != null){
                            <span class="text-danger">@ViewBag.Message</span>
                        }
                    </div>
                    <button type="submit" class="btn btn-success me-2">Submit</button>
                    <a class="btn btn-light" asp-area="Admin" asp-controller="Categories" asp-action="Index">Cancel</a>
                  </form>
                </div>
              </div>
            </div>

@section addjs{
 <script src="~/assets/libraries/jquery-validate/jquery.validate.min.js"></script>
 <script src="~/assets/libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 <script src="~/admin-assets/libs/select2/js/select2.full.min.js"></script>

    <script>
        $(document).ready(function() {
            $('.select2').select2({
                width: 'resolve'
            });
        });
    </script>

}
@section addcss{
    <link rel="stylesheet" href="~/admin-assets/libs/select2/css/select2.min.css">
    <style>
         .selection .select2-selection{
            height:60px;
         }
    </style>
}

