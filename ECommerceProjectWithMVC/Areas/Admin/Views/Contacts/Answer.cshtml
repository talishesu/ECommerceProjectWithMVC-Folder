@model Contact
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Contacts</h4>
                  <p class="card-description">
                      Answer Contact
                  </p>
                  <form class="forms-sample" method="post">
                    <div class="form-group">
                        <h3 class="display-5">Email: @Model.Email</h3>
                        <h3 class="display-5">Name: @Model.Name</h3>
                        <h3 class="display-5">Question: <h6 class="text-success">@Model.Message</h6></h3>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail1" class="required" asp-for="AnswerMessage" placeholder="Description">Answer Message</label>
                      <textarea  class="form-control form-control-lg" id="exampleInputEmail1" asp-for="AnswerMessage" placeholder="Answer Message"></textarea>
                        <span asp-validation-for="AnswerMessage" class="text-danger"></span>
                        @if(ViewBag.Message != null){
                            <span class="text-danger">@ViewBag.Message</span>
                        }
                    </div>
                    <button type="submit" class="btn btn-success me-2">Submit</button>
                    <a class="btn btn-light" asp-area="Admin" asp-controller="Contacts" asp-action="Index">Cancel</a>
                  </form>
                </div>
              </div>
            </div>

@section addjs{
 <script src="~/assets/libraries/jquery-validate/jquery.validate.min.js"></script>
 <script src="~/assets/libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

